- unless devise_error_messages!.blank?
  .alert.alert-danger= devise_error_messages!
.body-sign-in
  .panel.panel-primary
    .panel-heading
      %h2 #{I18n.t 'interface.registration'}
    .panel-body
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .form-group
          = f.label :email, I18n.t('interface.email')
          = f.text_field :email, autofocus: true, class: 'form-control'
        .form-group
          = f.label :login, I18n.t('interface.login')
          = f.text_field :login, autofocus: true, class: 'form-control'
        .form-group
          = f.label :last_name, I18n.t('interface.last_name')
          = f.text_field :last_name, class: 'form-control'
        .form-group
          = f.label :first_name, I18n.t('interface.first_name')
          = f.text_field :first_name, class: 'form-control'
        .form-group
          = f.label :father_name, I18n.t('interface.father_name')
          = f.text_field :father_name, class: 'form-control'
        .form-group
          %div
            = f.label :role, I18n.t('interface.roles.teacher')
            = f.radio_button :role, :teacher
          %div
            = f.label :role, I18n.t('interface.roles.student')
            = f.radio_button :role, :student
        .form-group
          = f.label :password, I18n.t('interface.password')
          = f.password_field :password, autocomplete: 'off', class: 'form-control'
        .form-group
          = f.label :password_confirmation, I18n.t('interface.password_confirmation')
          = f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control'
        %div= f.submit I18n.t('interface.sign_up'), class: 'btn btn-default'
        %div= link_to I18n.t('interface.sign_in'), new_user_session_path
