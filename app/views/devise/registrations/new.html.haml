- unless devise_error_messages!.blank?
  .alert.alert-danger
    = devise_error_messages!
.body-sign-in
  .panel.panel-primary
    .panel-heading
      %h2 Registration
    .panel-body
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .form-group
          = f.label :login
          = f.text_field :login, autofocus: true, class: 'form-control'
        .form-group
          = f.label :last_name, 'Last name'
          = f.text_field :last_name, class: 'form-control'
        .form-group
          = f.label :first_name, 'First name'
          = f.text_field :first_name, class: 'form-control'
        .form-group
          = f.label :father_name, 'Father name'
          = f.text_field :father_name, class: 'form-control'
        .form-group
          = label :token, 'Invite code'
          = text_field_tag :token, '', class: 'form-control'
        .form-group
          = f.label :password, 'Password'
          = f.password_field :password, autocomplete: 'off', class: 'form-control'
        .form-group
          = f.label :password_confirmation, 'Password confirmation'
          = f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control'
        %div= f.submit 'Sign up me now!', class: 'btn btn-default'
        %div= link_to 'Sign in', new_user_session_path
