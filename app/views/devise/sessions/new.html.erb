<body id = "admin_bkg">
<div id = "window_sign_in">

  <p id="sign_in_header">Вхід</p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <table id="sign_in_form">
      <tr><td><br/></td></tr>
      <tr><td>логін:</td></tr>
      <tr>
        <td><%= f.text_field :login, autofocus: true, class: "fields" %></td>
      </tr>
      <tr><td>пароль:</td></tr>
      <tr>
        <td><%= f.password_field :password, autocomplete: "off", class: "fields" %></td>
      </tr>
      <tr>
        <td>
        <% if devise_mapping.rememberable? %>
           <%= f.check_box :remember_me %> <%= f.label "Запамятати" %>
        <% end %>
        </td>
      </tr>
      <tr>
        <td><%= f.submit "Вхід", id: "sign_in_button" %></td>
      </tr>
    </table>
  <% end %>
</div>
<div id="error">
  <%= flash[:alert] %>
</div>
</body>