.body-sign-in
  .container.signin
    = form_for resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"} do |f|
      %p
        = f.label :login
        = f.text_field :login, autofocus: true, class: 'form-control'
      %p
        = f.label :password
        = f.password_field :password, autocomplete: 'off', class: 'form-control'
      %p
      = f.submit 'Sign in', class: 'btn btn-lg btn-primary btn-block'
      = link_to 'Registration', new_user_registration_path
  = flash[:alert]
