.navbar-inverse
  .navbar-header
    %button.navbar-toggle{type: 'button', data: {toggle: 'collapse', target: '.navbar-responsive-collapse'}}
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to 'Toaster', root_path, class: 'navbar-brand'
  .navbar-collapse.collapse.navbar-responsive-collapse
    %ul.nav.navbar-nav
      %li.dropdown
        %a.dropdown-toggle{data: {toggle: 'dropdown'}}
          Manage Toasts
          %b.caret
        %ul.dropdown-menu
          %li= link_to 'List', toasts_path
          %li= link_to 'New', new_toast_path
      %li= link_to 'Manage Groups', groups_path
      %li= link_to 'Manage Subjects', subjects_path
      %li.dropdown
        %a.dropdown-toggle{data: {toggle: 'dropdown'}}
          Mark systems
          %b.caret
        %ul.dropdown-menu
          %li= link_to 'List', mark_systems_path
          %li= link_to 'New', new_mark_system_path
      %li
        = link_to 'Results', results_path
    %ul.nav.navbar-nav.navbar-right
      %li.dropdown
        %a.dropdown-toggle{data: {toggle: 'dropdown'}}
          Invite codes
          %b.caret
        %ul.dropdown-menu
          - local = InviteCode.local
          %li= link_to "Admin: #{local[:admin]}", '#', id: 'admin_token'
          %li= link_to "User: #{local[:user]}", '#', id: 'user_token'
          %li
            %button.btn.btn-warning.key-gen Regenerate
      %li.dropdown
        %a.dropdown-toggle{data: {toggle: 'dropdown'}}
          = current_user.login
          %b.caret
        %ul.dropdown-menu
          %li= link_to 'My Profile', root_path
          %li= link_to 'Logout', destroy_user_session_path, method: :delete