.navbar-inverse
  .navbar-header
    %button.navbar-toggle{type: 'button', data: {toggle: 'collapse', target: '.navbar-responsive-collapse'}}
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to 'Toaster', root_path, class: 'navbar-brand'
  .navbar-collapse.collapse.navbar-responsive-collapse
    %ul.nav.navbar-nav
      %li.dropdown
        %a.dropdown-toggle{data: {toggle: 'dropdown'}}
          #{t 'interface.menu.manage_toasts'}
          %b.caret
        %ul.dropdown-menu
          %li= link_to t('interface.menu.list'), toasts_path
          %li= link_to t('interface.menu.new'), new_toast_path
      %li= link_to t('interface.menu.manage_groups'), groups_path
      %li= link_to t('interface.menu.manage_users'), users_path
      %li= link_to t('interface.menu.manage_subjects'), subjects_path
      %li.dropdown
        %a.dropdown-toggle{data: {toggle: 'dropdown'}}
          #{t 'interface.menu.mark_systems'}
          %b.caret
        %ul.dropdown-menu
          %li= link_to t('interface.menu.list'), mark_systems_path
          %li= link_to t('interface.menu.new'), new_mark_system_path
      %li= link_to t('interface.menu.results'), results_path
    %ul.nav.navbar-nav.navbar-right
      %li.dropdown
        %a.dropdown-toggle{data: {toggle: 'dropdown'}}
          = current_user.login
          %b.caret
        %ul.dropdown-menu
          %li= link_to t('interface.menu.my_profile'), edit_profile_path
          %li= link_to t('interface.menu.change_locale'), change_language_profile_path(reverse_language), method: :post
          %li= link_to t('interface.menu.logout'), destroy_user_session_path, method: :delete
