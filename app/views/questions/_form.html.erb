<body id="question_body">

<table id="head_panel">
  <tr>
    <td id="tbl_head_left"><%= link_to current_user.login, root_path %></td>
  </tr>
</table>
<div id = "question_content">
  <p id="question_header">Питання № <%= @test.question_count + 1 %></p>
  <%= form_for @question do |t| %>
    <%= t.hidden_field "question_test_id", :value => @test.id %>
    <table id = "question_form">
    <colgroup>
        <col width="200px">
        <col width="400px">
        <col width="200px">
    </colgroup>
    <tr>
      <td colspan="3">
        <%= t.text_area :condition, :id => "question_text" %>
      </td>
    </tr>
    <tr class="center">
      <td><%= t.radio_button :question_type, 1 %></td>
      <td><%= t.radio_button :question_type, 3 %></td>
      <td><%= t.radio_button :question_type, 2 %></td>
    </tr>
    <tr>
      <td>
        <p class="type_header">Лоігчне</p>
        <table style="margin-bottom: 20px; position: relative; left: 40px;">
          <tr><td><%= radio_button_tag :answer1, false %>ні</td></tr>
          <tr><td><%= radio_button_tag :answer1, true %>так</td></tr>
        </table>
      </td>

      <td>
        <p class="type_header">Відповідність</p>
        <table>
          <tr>
            <td id = "compl">
              <input type="button" value="-" onClick="delPrev('answer_left_');" style="width: 25px;" />
              <input type="button" value="+" onClick="addNext('compl','answer_left_');" style="width: 25px;" />
              <input type="text" name="answer_left_0" id="answer_left_0" value="" size="25" style="width: 170px;" />
            </td>

            <td id = "compr" class="right">
              <input type="button" value="-" onClick="delPrev('answer_right_');" style="width: 25px;" />
              <input type="button" value="+" onClick="addNext('compr','answer_right_');" style="width: 25px;" />
              <input type="text" name="answer_right_0" id="answer_right_0" value="" size="25" style="width: 170px;" />
            </td>
          </tr>
        </table>
      </td>

      <td id = "pright">
        <p class="type_header">Звичайне</p>
        <input type="button" value="-" onClick="delPrev('answer_');" style="width: 25px;" />
        <input type="button" value="+" onClick="addNext('pright','answer_');" style="width: 25px;" />
        <div>
          <input type="checkbox" id="answer_check_0" name="answer_check[]" value="0" />
          <input type="text" name="answer_0" id="answer_0" value="" size="25" style="width: 160px;" />
        </div>
      </td>
    </tr>

    <tr class="right">
      <td colspan="3">
        <%= t.submit "Зберегти", :class => "question_button" %>
      </td>
    </tr>
  </table>
  <% end %>
  <p id = "link_out"><%= link_to "Закінчити", test_path(@test.id) %></p>
</div>
  <div id="error">
    <%= flash[:error] || flash[:notice] %>
  </div>

  <p id="admin_footer"></p>
</body>