.panel.panel-warning.main
  .panel-heading
    %h3 #{I18n.t 'interface.results.results'}
  .panel-body
    %h4 #{I18n.t 'interface.group.group'}: #{Group.find(params[:group][:id]).name} - #{I18n.t 'interface.toast.toast'}: #{Toast.find(params[:toast][:id]).name}
    %table.table.table-striped
      %tr
        %th #{I18n.t 'interface.last_name'}
        %th #{I18n.t 'interface.mark.marks'}
        %th #{I18n.t 'interface.date'}
      - @users.each do |user|
        %tr
          %td= link_to user.last_name, edit_user_path(user)
          - results = user.results.where(toast_id: params[:toast][:id]).order(created_at: :desc)
          %td= results.map{|m| m.show_mark}.join(', ')
          %td= l results.first.created_at, format: :short unless results.first.nil?
  .panel-footer
    = link_to I18n.t('interface.results.build_another'), results_path, class: 'btn btn-warning'
    .pull-right
      = I18n.t('interface.results.export')
      = link_to( results_export_path(format: "xls", group_id: params[:group][:id], toast_id: params[:toast][:id]), class: 'btn btn-success', method: :post ) do
        %i.fa.fa-file-excel-o
        = I18n.t('interface.results.exel')

      = link_to( results_export_path(format: "doc", group_id: params[:group][:id], toast_id: params[:toast][:id]), class: 'btn btn-success', method: :post ) do
        %i.fa.fa-file-word-o
        = I18n.t('interface.results.word')
