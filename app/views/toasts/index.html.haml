.panel.panel-warning.main
  .panel-heading
    %h3 Toasts
  .panel-body
    %h4 Available toasts list:
    %table.table.table-striped
      %tr
        %th Name
        %th Subject
        %th Groups
        %th Actions
      - @toasts.each do |toast|
        %tr
          %td= toast.name
          %td= toast.subject.name
          %td= toast.groups.map{ |group| group.name }.join(', ') unless toast.groups.empty?
          %td.actions
            = link_to edit_toast_path(toast) do
              .btn.btn-sm.btn-info
                %i.fa.fa-edit
            = link_to toast_path(toast), method: :delete, data: {confirm: 'Are you sure?'} do
              .btn.btn-sm.btn-danger
                %i.fa.fa-trash
    .right= will_paginate @toasts
  .panel-footer
    = link_to 'New toast', new_toast_path, class: 'btn btn-default'
