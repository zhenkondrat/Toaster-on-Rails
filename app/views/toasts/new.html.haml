%h2 Create new toast
= form_for @toast, class: 'form' do |f|
  .form-group
    = f.label :subject_id, 'Subject'
    = link_to '(add new)', subjects_path
    = f.collection_select :subject_id, Subject.all, :id, :name, {prompt: false}, {class: 'form-control'}
  .form-group
    = f.label :mark_system_id, 'Mark system'
    = link_to '(add new)', new_mark_system_path
    = f.collection_select :mark_system_id, MarkSystem.all, :id, :name, {prompt: false}, {class: 'form-control'}
  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'
  %div
    = f.submit 'Create toast', class: 'btn btn-info'
