<body id="admin_bkg">

  <table id="head_panel">
    <tr>
      <td id="tbl_head_left"><%= link_to current_user.login, root_path %></td>
      <td id="tbl_head_right"><%= link_to "Групи & Користувачі", journal_path %></td>
    </tr>
  </table>

  <p id="admin_big_header">Ласкаво просимо</p>

  <table id="admin_content">
    <col width="210px">
    <col width="350px">
    <col width="210px">
    <tr>
      <td valign="top"> <!-- create test -->
        <p class="admin_small_header">Створити тест</p>
        <%= form_tag :controller => 'tests', :action => 'create' do %>
          <table style="margin-bottom: 20px;">
            <tr><td>Оберіть предмет: <%= link_to "(створ.)", new_subject_path, :class => 'small_link' %></td></tr>
            <tr>
              <td>
                <%= select("subject",
                           "subject_id",
                           Subject.all.collect {|p| [ p.subject_name, p.id ] }, {include_blank: '...'},
                           class: "admin_selects",
                           id: "select_to_create",
                           style: "margin-top: 10px; margin-bottom: 10px;",
                           onChange: "subject_selected();",
                    )
                %>
                <%= link_to "Видал.", 'delete_subject', :id => 'rm_subject', :class => 'small_link' %>
              </td>
            </tr>
            <tr><td>Введіть тему:</td></tr>
            <tr><td><%= text_field_tag :theme, "", :id => 'theme', :class => 'admin_fields' %></td></tr>
          </table>
          <%= submit_tag "Створити", :name => nil, :class => 'admin_buttons' %>
        <% end %>
      </td>
      <td valign="top"> <!-- find test -->
        <p class="admin_small_header">Знайти існуючий тест</p>
        <p>Відомі дані для пошуку:</p>
        <%= form_tag :controller => 'users', :action => 'index' do %>
            <table id="search_form">
                <col width="350">
                <tr>
                  <td>Оберіть предмет:</td>
                  <td>
                    <%= select("subject",
                               "subject_id",
                               Subject.all.collect {|p| [ p.subject_name, p.id ] },
                               @select_find ||= {include_blank: '...'},
                               class: "admin_selects"
                        )
                    %>
                  </td>
              </tr>
              <tr>
                <td>Введіть тему:</td>
                <td><%= text_field_tag :theme, "", :id => 'theme', :class => 'admin_fields' %></td>
              </tr>
              <tr>
                <td>Введіть групу:</td>
                <td><%= text_field_tag :group, "", :id => 'group', :class => 'admin_fields' %></td>
              </tr>
            </table>
            <%= submit_tag "Знайти", :name => nil, :class => 'admin_buttons' %>
        <% end %>
        <!-- find test results -->
        <%= render 'tests/tests' %>
      </td>
      <td valign="top"> <!-- last results -->
        <p class="admin_small_header">Остання активність</p>
        <%= render 'activity' %>
      </td>
    </tr>
  </table>

<div id="exit">
  <%= link_to destroy_user_session_path, :method => :delete do %>
      <%= image_tag "exit.gif", :style => 'width: 50px;' %>
  <% end %>
</div>

<div id="error">
  <%= flash[:alert] || flash[:notice] %>
</div>

<p id="admin_footer"></p>

</body>